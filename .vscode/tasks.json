{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run-test-build",
			"command": "node",
			"args": ["./test/build.mjs"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "run-test-all",
			"command": "npm",
			"args": ["run", "test"],
			"dependsOn": ["run-test-build"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "run-test-specific",
			"command": "npm",
			"args": ["run", "test", "${file}"],
			"dependsOn": ["run-test-build"],
			"group": {
				"kind": "test",
				"isDefault": "**/*.{ts,test.js}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "run-build",
			"command": "npm",
			"args": ["run", "build"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}